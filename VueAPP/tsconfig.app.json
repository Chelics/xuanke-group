{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue","src/**/*/*.vue","vite.config.*",
  "vitest.config.*",
  "cypress.config.*",
  "nightwatch.conf.*",
  "playwright.config.*",
  "src/main.ts",
  "src/util/request.ts",
  "env.d.ts",
  "src/stores/auth.ts",
  "src/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": "./",
    
    "types": ["node"]
  },
  "include": [
    // 添加这一行来包含所有的`.ts`文件，或者具体指定某些文件或目录
    "src/**/*.ts",
    "src/**/*.vue",

    // 如果您需要特别包含某个文件或目录，可以这样写
    // "src/api/Login.ts"
  ],
}
